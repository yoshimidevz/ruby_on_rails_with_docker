<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Resultado do Quiz</h1>
          <h2 class="text-xl text-gray-600"><%= @quiz.title %></h2>
        </div>

        <!-- Resumo do Resultado -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-6 mb-8">
          <div class="flex items-center justify-center space-x-8">
            <div class="text-center">
              <div class="text-4xl font-bold text-blue-600"><%= @score %></div>
              <div class="text-sm text-gray-600">de <%= @total_points %> pontos</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-green-600"><%= @percentage %>%</div>
              <div class="text-sm text-gray-600">de aproveitamento</div>
            </div>
          </div>
          
          <div class="mt-4">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-gradient-to-r from-blue-500 to-green-500 h-2 rounded-full" 
                   style="width: <%= @percentage %>%"></div>
            </div>
          </div>
        </div>

        <!-- Detalhes das Respostas -->
        <div class="space-y-6">
          <h3 class="text-lg font-medium text-gray-900">Detalhes das Respostas</h3>
          
          <% @user_answers.each_with_index do |answer, index| %>
            <div class="border border-gray-200 rounded-lg p-6">
              <div class="flex items-start justify-between mb-4">
                <h4 class="text-lg font-medium text-gray-900">
                  Pergunta <%= index + 1 %>
                </h4>
                <div class="flex items-center space-x-2">
                  <% if answer.correct? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      Correta
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                      Incorreta
                    </span>
                  <% end %>
                  <span class="text-sm text-gray-500">
                    <%= answer.question.points %> ponto<%= 's' if answer.question.points > 1 %>
                  </span>
                </div>
              </div>
              
              <p class="text-gray-700 mb-4"><%= answer.question.question_text %></p>
              
              <div class="space-y-2">
                <div class="flex items-center p-3 rounded-lg <%= answer.correct? ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200' %>">
                  <div class="flex-shrink-0">
                    <% if answer.correct? %>
                      <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    <% else %>
                      <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium <%= answer.correct? ? 'text-green-800' : 'text-red-800' %>">
                      Sua resposta: <%= answer.option.option_text %>
                    </p>
                  </div>
                </div>
                
                <% unless answer.correct? %>
                  <div class="flex items-center p-3 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-green-800">
                        Resposta correta: <%= answer.question.correct_option.option_text %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-8 flex justify-center space-x-4">
          <%= link_to "Voltar para Quizzes", quizzes_path, 
                      class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
          <%= link_to "Fazer Novamente", take_quiz_quiz_path(@quiz), 
                      class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    </div>
  </div>
</div>
