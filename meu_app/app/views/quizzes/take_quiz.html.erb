<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold text-gray-900"><%= @quiz.title %></h1>
          <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded-full">
            <%= @quiz.total_points %> pontos
          </span>
        </div>
        
        <% if @quiz.description.present? %>
          <p class="text-gray-600 mb-6"><%= @quiz.description %></p>
        <% end %>

        <% if @questions.any? %>
          <div class="space-y-8">
            <% @questions.each_with_index do |question, index| %>
              <div class="border border-gray-200 rounded-lg p-6">
                <div class="flex items-start justify-between mb-4">
                  <h3 class="text-lg font-medium text-gray-900">
                    Pergunta <%= index + 1 %> de <%= @questions.count %>
                  </h3>
                  <span class="bg-gray-100 text-gray-800 text-sm font-medium px-2.5 py-0.5 rounded-full">
                    <%= question.points %> ponto<%= 's' if question.points > 1 %>
                  </span>
                </div>
                
                <p class="text-gray-700 mb-6"><%= question.question_text %></p>
                
                <% if question.multiple_choice? %>
                  <div class="space-y-3">
                    <% question.options.each do |option| %>
                      <label class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                        <input type="radio" 
                               name="question_<%= question.id %>" 
                               value="<%= option.id %>"
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300"
                               <%= 'checked' if @user_answers[question.id]&.option_id == option.id %>>
                        <span class="ml-3 text-sm text-gray-700"><%= option.option_text %></span>
                      </label>
                    <% end %>
                  </div>
                <% elsif question.true_false? %>
                  <div class="space-y-3">
                    <% question.options.each do |option| %>
                      <label class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                        <input type="radio" 
                               name="question_<%= question.id %>" 
                               value="<%= option.id %>"
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300"
                               <%= 'checked' if @user_answers[question.id]&.option_id == option.id %>>
                        <span class="ml-3 text-sm text-gray-700"><%= option.option_text %></span>
                      </label>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="mt-8 flex justify-between">
            <%= link_to "Voltar para Quizzes", quizzes_path, 
                        class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
            <button onclick="submitQuiz()" 
                    class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
              Finalizar Quiz
            </button>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="mx-auto h-12 w-12 text-gray-400">
              <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma pergunta encontrada</h3>
            <p class="mt-1 text-sm text-gray-500">Este quiz ainda não possui perguntas.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
function submitQuiz() {
  const formData = new FormData();
  const questions = document.querySelectorAll('[name^="question_"]');
  
  questions.forEach(question => {
    if (question.checked) {
      const questionId = question.name.replace('question_', '');
      formData.append(`answer[option_id]`, question.value);
      
      // Enviar cada resposta individualmente
      fetch(`/quizzes/<%= @quiz.id %>/questions/${questionId}/answers`, {
        method: 'POST',
        body: formData,
        headers: {
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        }
      });
    }
  });
  
  // Redirecionar para resultados após um pequeno delay
  setTimeout(() => {
    window.location.href = '<%= results_quiz_path(@quiz) %>';
  }, 1000);
}
</script>
