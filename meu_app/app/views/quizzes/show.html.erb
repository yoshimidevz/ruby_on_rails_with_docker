<div class="max-w-5xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-start mb-6">
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @quiz.title %></h1>
            <% if @quiz.description.present? %>
              <p class="text-gray-600 mt-2"><%= @quiz.description %></p>
            <% end %>
          </div>
          <div class="flex items-center space-x-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <%= case @quiz.status
                  when 'draft' then 'bg-gray-100 text-gray-800'
                  when 'published' then 'bg-green-100 text-green-800'
                  when 'closed' then 'bg-red-100 text-red-800'
                  end %>">
              <%= @quiz.status.humanize %>
            </span>
            <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded-full">
              <%= @quiz.total_points %> pontos
            </span>
          </div>
        </div>

        <div class="flex items-center justify-between mb-4 text-sm text-gray-500">
          <span>Criado por: <%= @quiz.admin.name || @quiz.admin.email %></span>
          <span><%= @quiz.total_questions %> perguntas</span>
        </div>

        <% if policy(@quiz).update? %>
          <div class="mb-6 flex space-x-2">
            <%= link_to "Editar Quiz", edit_quiz_path(@quiz), class: "bg-yellow-100 hover:bg-yellow-200 text-yellow-800 text-sm font-medium py-2 px-3 rounded" %>
            <%= link_to "Nova Pergunta", new_quiz_question_path(@quiz), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-3 rounded" %>
            <% if policy(@quiz).publish? && @quiz.draft? %>
              <%= link_to "Publicar", publish_quiz_path(@quiz), method: :patch, data: { turbo_method: :patch }, class: "bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-2 px-3 rounded" %>
            <% end %>
          </div>
        <% end %>

        <% if @quiz.questions.any? %>
          <div class="space-y-6">
            <% @quiz.questions.includes(:options).order(:created_at).each_with_index do |question, idx| %>
              <div class="border border-gray-200 rounded-lg p-6">
                <div class="flex items-start justify-between mb-3">
                  <h3 class="text-lg font-medium text-gray-900">Pergunta <%= idx + 1 %></h3>
                  <div class="flex items-center space-x-2">
                    <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                      <%= question.points %> ponto<%= 's' if question.points > 1 %>
                    </span>
                    <% if policy(question).update? %>
                      <%= link_to "Editar", edit_quiz_question_path(@quiz, question), class: "bg-yellow-100 hover:bg-yellow-200 text-yellow-800 text-xs font-medium py-1 px-2 rounded" %>
                    <% end %>
                    <% if policy(question).destroy? %>
                      <%= link_to "Excluir", quiz_question_path(@quiz, question), method: :delete, data: { turbo_confirm: 'Excluir esta pergunta?' }, class: "bg-red-100 hover:bg-red-200 text-red-800 text-xs font-medium py-1 px-2 rounded" %>
                    <% end %>
                  </div>
                </div>
                <p class="text-gray-700 mb-4"><%= question.question_text %></p>
                <ul class="space-y-2">
                  <% question.options.each do |opt| %>
                    <li class="flex items-center p-3 border border-gray-200 rounded-lg <%= opt.is_correct? ? 'bg-green-50 border-green-200' : '' %>">
                      <span class="text-sm text-gray-800"><%= opt.option_text %></span>
                      <% if opt.is_correct? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Correta</span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="mx-auto h-12 w-12 text-gray-400">
              <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma pergunta ainda</h3>
            <% if policy(@quiz).update? %>
              <p class="mt-1 text-sm text-gray-500">Crie a primeira pergunta para este quiz.</p>
              <div class="mt-6">
                <%= link_to "Nova Pergunta", new_quiz_question_path(@quiz), class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="mt-8 flex justify-between">
          <%= link_to "Voltar", quizzes_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
          <% if @quiz.published? && @quiz.can_be_taken_by?(current_admin) %>
            <%= link_to "Fazer Quiz", take_quiz_quiz_path(@quiz), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
